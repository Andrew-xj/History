.title{
  height: 20vh;
  font-size: 60rpx;
}

.title-box{
  position: relative;
  z-index: 5;
  top: 1vh;
}

.description{
  width: 100vw;
  height: 80vh;
  display: flex;
  justify-content: center;
  font-size: 35rpx;
}

.word{
  position: relative;
  width: 90vw;
  height: 65vh;
  word-break:break-all;
  letter-spacing: 0rpx;
  line-height: 60rpx;
  top: 4vh;
  z-index: 5;
  text-align: justify;
}

.word::after{
  width: 100%;
  display: inline-block;
  content: "";
}

.body{
  position: absolute;
  top: 0px;
  bottom: 0px;
  left: 0px;
  height: 100vh;
  width: 100vw;
  z-index: 1;
}