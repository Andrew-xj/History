.title{
  position: relative;
  display: flex;
  font-size: 55rpx;
  justify-content: center;
  align-items: center;
  text-align: center;
  height: 25vh;
  z-index: 5;
}

.t-word{
  position: relative;
  top: 2vh;
}

.description{
  position: relative;
  width: 100vw;
  height: 63vh;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 5;
  bottom: 3vh;
}

.word{
  height: 63vh;
  width: 90vw;
  font-size: 35rpx;
  word-break:break-all;
  letter-spacing: 3rpx;
  line-height: 60rpx;
  text-align: justify;
}

.word::after{
  width: 100%;
  display: inline-block;
  content: "";
}

.todetail{
  position: relative;
  flex-direction: column;
  width: 100vw;
  height: 12vh;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 5;
}

.img-box{
  position: absolute;
  display: flex;
  flex-direction: column;
  height: 12vh;
  width: 70vw;
  justify-content: center;
  align-items: center;
}

.btn{
  position: relative;
  height: 12vh;
  width: 70vw;
  bottom: 1.5vh;
}

.text-box{
  position: absolute;
  display: flex;
  flex-direction: column;
  height: 12vh;
  width: 70vw;
  justify-content: center;
  align-items: center;
}

.text{
  position: relative;
  font-size: 40rpx;
  z-index: 7;
  color: rgba(205, 113, 37, 0.902);
  bottom: 1.5vh;
}

.body{
  position: absolute;
  top: 0px;
  bottom: 0px;
  left: 0px;
  height: 100vh;
  width: 100vw;
  z-index: 1;
}
